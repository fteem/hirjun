%nav.top-bar{ 'data-options' => "is_hover:true" }
  %ul.title-area
    %li.name
      .logo
        = link_to '/' do
          = image_tag 'hardhat.gif'
          %h1.right
            Hire Juniors
        %p.right#headline
          == ...because every pro was once a newbie
  %section.top-bar-section
    %ul.right{style: 'background-color: transparent'}
      %li.divider
      %li= link_to "Home", '/'
      %li.divider
      %li= link_to "Ads", job_ads_path
      %li.divider
      - if user_signed_in?
        %li.has-dropdown
          =link_to 'Account', '#'
          %ul.dropdown
            %li= link_to 'Profile', edit_user_registration_path
            %li= link_to "Sign out", destroy_user_session_path, method: 'delete'
      - else
        %li= link_to "Sign in", new_user_session_path
        %li.divider
        %li= link_to "Sign up", new_user_registration_path
